<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBarbearia.Pages.ListaPromocoes">
    
    <StackLayout>
        <ScrollView Orientation="Horizontal">
            <StackLayout>
                <Grid BackgroundColor="Orange">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Grid.Row="0" Text="ID" BackgroundColor="Orange" TextColor="White" FontAttributes="Bold"/>
                    <Label Grid.Column="1" Grid.Row="0" Text="Status" BackgroundColor="Orange" TextColor="White" FontAttributes="Bold"/>
                    <Label Grid.Column="2" Grid.Row="0" Text="Nome da promoção" BackgroundColor="Orange" TextColor="White" FontAttributes="Bold"/>
                    <Label Grid.Column="3" Grid.Row="0" Text="Descrição" BackgroundColor="Orange" TextColor="White" FontAttributes="Bold"/>
                    <Label Grid.Column="4" Grid.Row="0" Text="Tempo" BackgroundColor="Orange" TextColor="White" FontAttributes="Bold"/>
                    <Label Grid.Column="5" Grid.Row="0" Text="Valor" BackgroundColor="Orange" TextColor="White" FontAttributes="Bold"/>
                </Grid>

                <ListView x:Name="listViewPromocoes" BackgroundColor="White" HasUnevenRows="True">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.ContextActions>
                                    <MenuItem Text="Atualizar" 
                                          x:Name="MenuItemAtualizarPromocao" 
                                          Clicked="MenuItemAtualizarPromocao_Clicked" 
                                          CommandParameter="{Binding .}" 
                                          IsDestructive="False" />
                                    <MenuItem Text="Apagar" 
                                          x:Name="MenuItemApagarPromocao" 
                                          Clicked="MenuItemApagarPromocao_Clicked" 
                                          CommandParameter="{Binding .}" 
                                          IsDestructive="True" />
                                    <MenuItem Text="Apagar Tudo" 
                                          x:Name="MenuItemApagarTudoPromocao" 
                                          Clicked="MenuItemApagarTudoPromocao_Clicked" 
                                          CommandParameter="{Binding .}" 
                                          IsDestructive="True" />
                                </ViewCell.ContextActions>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="300"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="150"/>
                                    </Grid.ColumnDefinitions>

                                    <Label  Grid.Column="0" Text="{Binding ID}" TextColor="Black"/>
                                    <Label  Grid.Column="1" Text="{Binding status}" TextColor="Black"/>
                                    <Label  Grid.Column="2" Text="{Binding nome_promocao}" TextColor="Black"/>
                                    <Label Grid.Column="3" Text="{Binding descricao}" TextColor="Black"/>
                                    <Label Grid.Column="4" Text="{Binding tempo}" TextColor="Black"/>
                                    <Label Grid.Column="5" Text="{Binding valor}" TextColor="Black"/>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </ScrollView>
        <StackLayout Orientation="Horizontal">
            <Button Text="Adicionar" x:Name="buttonAdicionarPromocao" Clicked="ButtonAdicionarPromocao_Clicked" FontSize="15" FontAttributes="Bold" HorizontalOptions="FillAndExpand" Margin="10, 10, 10, 5"
                    BackgroundColor="Orange" BorderRadius="10" TextColor="White" />
            <Button Text="Atualizar lista" x:Name="buttonAtualizarListaPromocao" Clicked="ButtonAtualizarListaPromocao_Clicked" FontSize="15" FontAttributes="Bold" HorizontalOptions="FillAndExpand" Margin="0, 10, 10, 5"
                    BackgroundColor="Orange" BorderRadius="10" TextColor="White"/>
        </StackLayout>
    </StackLayout>
</ContentPage>